<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/qz_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/pv_content_layout_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        android:layout_marginBottom="20dp"
        android:gravity="bottom">

        <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp"/>
          <ImageButton
            android:id="@+id/pv_welcome_desc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/im_btn_bg"
            android:textColor="@color/pv_white"
            android:src="@drawable/pv_welcome_icon1"
            android:visibility="invisible"/>

 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp"/>
      <ImageButton
          android:id="@+id/pv_welcome_diff_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/im_btn_bg"
            android:textColor="@color/pv_white"
            android:text="P"
           android:src="@drawable/pv_welcome_icon3"/>
         <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp"/>
        <ImageButton
            android:id="@+id/pv_welcome_video_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/im_btn_bg"
              android:textColor="@color/pv_white"
            android:src="@drawable/pv_welcome_icon2"
            android:visibility="invisible"/>
         <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp"/>
    </LinearLayout>
</RelativeLayout>